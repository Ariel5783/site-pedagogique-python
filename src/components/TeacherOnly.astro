---
interface Props {
  title?: string;
}

const { title = 'Corrigé' } = Astro.props;
---

<div class="teacher-only-content hidden" data-teacher-only>
  <div class="bg-yellow-50 dark:bg-yellow-900/20 border-2 border-yellow-300 dark:border-yellow-800 rounded-lg p-6 my-6">
    <div class="flex items-start mb-4">
      <div class="flex-shrink-0">
        <svg class="w-6 h-6 text-yellow-600 dark:text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
        </svg>
      </div>
      <div class="ml-3">
        <h3 class="text-lg font-semibold text-yellow-900 dark:text-yellow-100">
          {title} (Mode Professeur)
        </h3>
        <p class="text-sm text-yellow-800 dark:text-yellow-200 mt-1">
          Ce contenu est visible uniquement en mode professeur.
        </p>
      </div>
    </div>
    <div class="prose prose-sm dark:prose-invert max-w-none">
      <slot />
    </div>
  </div>
</div>

<script>
  // Afficher le contenu uniquement si l'utilisateur est professeur
  document.addEventListener('DOMContentLoaded', () => {
    const isTeacher = localStorage.getItem('isTeacher') === 'true';
    
    const teacherOnlyElements = document.querySelectorAll('[data-teacher-only]');
    
    teacherOnlyElements.forEach((element) => {
      if (isTeacher) {
        element.classList.remove('hidden');
      } else {
        // S'assurer que le contenu n'est pas dans le DOM pour les non-professeurs
        element.remove();
      }
    });

    // Si pas professeur, afficher un message d'information
    if (!isTeacher && teacherOnlyElements.length > 0) {
      const firstTeacherBlock = document.querySelector('[data-teacher-only]')?.parentElement;
      if (firstTeacherBlock) {
        const info = document.createElement('div');
        info.className = 'alert alert-info';
        info.innerHTML = `
          <div class="flex items-start">
            <svg class="w-5 h-5 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
            </svg>
            <div>
              <p class="font-medium">Contenu réservé aux enseignants</p>
              <p class="text-sm mt-1">Les corrigés et barèmes sont accessibles uniquement en mode professeur.</p>
              <a href="/prof" class="text-sm underline mt-2 inline-block">Activer le mode professeur</a>
            </div>
          </div>
        `;
        firstTeacherBlock.insertBefore(info, firstTeacherBlock.firstChild);
      }
    }
  });
</script>
