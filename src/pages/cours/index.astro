---
import Layout from '../../layouts/Layout.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';
import Card from '../../components/Card.astro';
import { getCollection } from 'astro:content';

const allCours = await getCollection('cours');
const sortedCours = allCours.sort(
  (a, b) => new Date(b.data.updated).getTime() - new Date(a.data.updated).getTime()
);

const breadcrumbItems = [
  { label: 'Cours' },
];
---

<Layout title="Cours">
  <div class="container mx-auto px-4 py-12">
    <Breadcrumb items={breadcrumbItems} />
    
    <div class="mb-8">
      <h1 class="text-4xl font-bold text-secondary-900 dark:text-secondary-50 mb-4">
        Cours de Python
      </h1>
      <p class="text-lg text-secondary-700 dark:text-secondary-300">
        Cours participatifs avec exercices intégrés et sauvegarde automatique de vos réponses.
      </p>
    </div>

    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      {sortedCours.map((cours) => (
        <Card
          title={cours.data.title}
          slug={cours.slug}
          level={cours.data.level}
          type="cours"
          duree={cours.data.duree_estimee}
          updated={cours.data.updated}
          objectifs={cours.data.objectifs}
        />
      ))}
    </div>

    {sortedCours.length === 0 && (
      <div class="text-center py-12">
        <svg class="w-16 h-16 mx-auto text-secondary-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
        </svg>
        <p class="text-lg text-secondary-600 dark:text-secondary-400">
          Aucun cours disponible pour le moment.
        </p>
      </div>
    )}
  </div>
</Layout>
