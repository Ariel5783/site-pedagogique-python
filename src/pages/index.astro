---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import { getCollection } from 'astro:content';

// Récupérer tous les contenus
const allCours = await getCollection('cours');
const allExercices = await getCollection('exercices');

const allContent = [...allCours, ...allExercices].sort(
  (a, b) => new Date(b.data.updated || '').getTime() - new Date(a.data.updated || '').getTime()
);

// Dernières mises à jour
const recentUpdates = allContent.slice(0, 5);

// Niveaux uniques
const levels = [...new Set(allContent.flatMap(item => item.data.level))];
---

<Layout>
  <div class="bg-gradient-to-br from-primary-50 to-secondary-50 dark:from-secondary-900 dark:to-secondary-800 py-16">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-5xl font-bold text-secondary-900 dark:text-secondary-50 mb-4">
          Python Pédagogique
        </h1>
        <p class="text-xl text-secondary-700 dark:text-secondary-300 mb-2">
          Ressources de programmation Python
        </p>
        <p class="text-lg text-secondary-600 dark:text-secondary-400 mb-8">
          La Salle Saint-Nicolas · Bac Pro CIEL, BTS CIEL, BTS SIO
        </p>
        
        <!-- Barre de recherche -->
        <div class="max-w-2xl mx-auto">
          <div class="relative">
            <input
              type="search"
              id="search-input"
              placeholder="Rechercher un cours, exercice..."
              class="input-field pr-12"
              aria-label="Rechercher du contenu"
            />
            <div class="absolute right-3 top-1/2 -translate-y-1/2">
              <svg class="w-5 h-5 text-secondary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
              </svg>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="container mx-auto px-4 py-12">
    <!-- Filtres -->
    <div class="mb-8">
      <div class="flex flex-wrap gap-4 items-center">
        <div>
          <label for="level-filter" class="block text-sm font-medium text-secondary-700 dark:text-secondary-300 mb-2">
            Niveau :
          </label>
          <select id="level-filter" class="input-field w-auto">
            <option value="">Tous les niveaux</option>
            {levels.map(level => (
              <option value={level}>{level}</option>
            ))}
          </select>
        </div>

        <div>
          <label for="type-filter" class="block text-sm font-medium text-secondary-700 dark:text-secondary-300 mb-2">
            Type :
          </label>
          <select id="type-filter" class="input-field w-auto">
            <option value="">Tous les types</option>
            <option value="cours">Cours</option>
            <option value="exercices">Exercices</option>
          </select>
        </div>

        <button
          id="reset-filters"
          class="btn-secondary mt-auto"
        >
          Réinitialiser
        </button>
      </div>
    </div>

    <!-- Quoi de neuf -->
    {recentUpdates.length > 0 && (
      <section class="mb-12">
        <h2 class="text-2xl font-bold text-secondary-900 dark:text-secondary-50 mb-6 flex items-center">
          <svg class="w-6 h-6 mr-2 text-primary-600" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
          </svg>
          Quoi de neuf ?
        </h2>
        <div class="bg-white dark:bg-secondary-800 rounded-lg shadow-md p-6">
          <ul class="space-y-4">
            {recentUpdates.map((item) => (
              <li class="flex items-start">
                <div class="flex-shrink-0 w-16 text-center">
                  <div class="text-sm font-medium text-primary-600 dark:text-primary-400">
                    {new Date(item.data.updated || '').toLocaleDateString('fr-FR', { day: '2-digit', month: 'short' })}
                  </div>
                </div>
                <div class="flex-1">
                  <a
                    href={`/${item.collection}/${item.slug}`}
                    class="text-secondary-900 dark:text-secondary-50 hover:text-primary-600 dark:hover:text-primary-400 font-medium"
                  >
                    {item.data.title}
                  </a>
                  <div class="flex items-center gap-2 mt-1">
                    <span class={`badge text-xs ${
                      item.collection === 'cours' 
                        ? 'bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200'
                        : 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200'
                    }`}>
                      {item.collection === 'cours' ? 'Cours' : 'Exercices'}
                    </span>
                    {item.data.level.map(l => (
                      <span class="badge badge-secondary text-xs">{l}</span>
                    ))}
                  </div>
                </div>
              </li>
            ))}
          </ul>
        </div>
      </section>
    )}

    <!-- Grille de cartes -->
    <section>
      <h2 class="text-2xl font-bold text-secondary-900 dark:text-secondary-50 mb-6">
        Tous les contenus
      </h2>
      
      <div id="content-grid" class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        {allContent.map((item) => (
          <div
            class="content-card"
            data-level={JSON.stringify(item.data.level)}
            data-type={item.collection}
            data-title={item.data.title.toLowerCase()}
          >
            <Card
              title={item.data.title}
              slug={item.slug}
              level={item.data.level}
              type={item.collection as 'cours' | 'exercices'}
              duree={item.data.duree_estimee}
              updated={item.data.updated}
              objectifs={item.data.objectifs}
            />
          </div>
        ))}
      </div>

      <div id="no-results" class="hidden text-center py-12">
        <svg class="w-16 h-16 mx-auto text-secondary-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <p class="text-lg text-secondary-600 dark:text-secondary-400">
          Aucun contenu ne correspond à vos critères.
        </p>
        <button
          onclick="document.getElementById('reset-filters')?.click()"
          class="btn-primary mt-4"
        >
          Réinitialiser les filtres
        </button>
      </div>
    </section>
  </div>
</Layout>

<script>
  const searchInput = document.getElementById('search-input') as HTMLInputElement;
  const levelFilter = document.getElementById('level-filter') as HTMLSelectElement;
  const typeFilter = document.getElementById('type-filter') as HTMLSelectElement;
  const resetBtn = document.getElementById('reset-filters');
  const contentCards = document.querySelectorAll('.content-card');
  const noResults = document.getElementById('no-results');

  function filterContent() {
    const searchTerm = searchInput.value.toLowerCase();
    const selectedLevel = levelFilter.value;
    const selectedType = typeFilter.value;
    
    let visibleCount = 0;

    contentCards.forEach((card) => {
      const cardElement = card as HTMLElement;
      const title = cardElement.dataset.title || '';
      const levels = JSON.parse(cardElement.dataset.level || '[]');
      const type = cardElement.dataset.type || '';

      const matchesSearch = title.includes(searchTerm);
      const matchesLevel = !selectedLevel || levels.includes(selectedLevel);
      const matchesType = !selectedType || type === selectedType;

      const isVisible = matchesSearch && matchesLevel && matchesType;
      
      if (isVisible) {
        cardElement.classList.remove('hidden');
        visibleCount++;
      } else {
        cardElement.classList.add('hidden');
      }
    });

    if (noResults) {
      if (visibleCount === 0) {
        noResults.classList.remove('hidden');
      } else {
        noResults.classList.add('hidden');
      }
    }
  }

  searchInput?.addEventListener('input', filterContent);
  levelFilter?.addEventListener('change', filterContent);
  typeFilter?.addEventListener('change', filterContent);

  resetBtn?.addEventListener('click', () => {
    searchInput.value = '';
    levelFilter.value = '';
    typeFilter.value = '';
    filterContent();
  });
</script>
