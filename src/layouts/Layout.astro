---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
  type?: 'website' | 'article';
  noIndex?: boolean;
}

const {
  title = 'Python Pédagogique',
  description = 'Site pédagogique de programmation Python pour La Salle Saint-Nicolas - Bac Pro CIEL, BTS CIEL, BTS SIO',
  type = 'website',
  noIndex = false,
} = Astro.props;

const fullTitle = title === 'Python Pédagogique' ? title : `${title} | Python Pédagogique`;
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO -->
    <title>{fullTitle}</title>
    <meta name="description" content={description} />
    {noIndex && <meta name="robots" content="noindex, nofollow" />}
    
    <!-- Open Graph -->
    <meta property="og:type" content={type} />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:locale" content="fr_FR" />
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    
    <!-- Theme color -->
    <meta name="theme-color" content="#0ea5e9" />
    
    <!-- Author -->
    <meta name="author" content="Eric MORMIN - EKM Conseils" />
    
    <!-- Copyright -->
    <meta name="copyright" content="Eric MORMIN - EKM Conseils" />
  </head>
  <body class="min-h-screen flex flex-col">
    <Header />
    
    <main class="flex-1">
      <slot />
    </main>
    
    <Footer />
    
    <!-- Scripts globaux -->
    <script>
      // Gestion du mode sombre persistant
      const savedTheme = localStorage.getItem('theme');
      if (savedTheme === 'dark' || (!savedTheme && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
        document.documentElement.classList.add('dark');
      }
    </script>
  </body>
</html>
