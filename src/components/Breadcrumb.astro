---
interface Props {
  items: Array<{
    label: string;
    href?: string;
  }>;
}

const { items } = Astro.props;
---

<nav aria-label="Fil d'Ariane" class="breadcrumb mb-6">
  <ol class="flex items-center space-x-2">
    <li>
      <a href="/" class="breadcrumb-item">
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
          <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z" />
        </svg>
        <span class="sr-only">Accueil</span>
      </a>
    </li>
    {items.map((item, index) => (
      <>
        <li aria-hidden="true" class="text-secondary-400 dark:text-secondary-600">/</li>
        <li>
          {item.href && index < items.length - 1 ? (
            <a href={item.href} class="breadcrumb-item">
              {item.label}
            </a>
          ) : (
            <span class="text-secondary-900 dark:text-secondary-100 font-medium" aria-current="page">
              {item.label}
            </span>
          )}
        </li>
      </>
    ))}
  </ol>
</nav>
