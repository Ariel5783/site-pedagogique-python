---
const currentPath = Astro.url.pathname;

const navItems = [
  { href: '/', label: 'Accueil' },
  { href: '/cours', label: 'Cours' },
  { href: '/exercices', label: 'Exercices' },
  { href: '/ressources', label: 'Ressources' },
  { href: '/apropos', label: 'À propos' },
];
---

<header class="bg-white dark:bg-secondary-900 shadow-sm sticky top-0 z-50 no-print">
  <nav class="container mx-auto px-4 py-4" aria-label="Navigation principale">
    <div class="flex items-center justify-between">
      <!-- Logo et titre -->
      <div class="flex items-center space-x-3">
        <a href="/" class="flex items-center space-x-3 group">
          <!-- Logo La Salle Saint-Nicolas -->
          <img 
            src="/images/logo-lassale-st-nicolas.png" 
            alt="Logo La Salle Saint-Nicolas" 
            class="h-12 w-auto object-contain"
          />
          
          <div class="hidden sm:block">
            <div class="text-lg font-semibold text-secondary-900 dark:text-secondary-50 group-hover:text-primary-600 transition-colors">
              Python Pédagogique
            </div>
            <div class="text-xs text-secondary-600 dark:text-secondary-400">
              La Salle Saint-Nicolas
            </div>
          </div>
        </a>
      </div>

      <!-- Navigation desktop -->
      <div class="hidden md:flex items-center space-x-1">
        {navItems.map((item) => (
          <a
            href={item.href}
            class={`px-4 py-2 rounded-lg transition-colors ${
              currentPath === item.href || (item.href !== '/' && currentPath.startsWith(item.href))
                ? 'bg-primary-100 text-primary-700 dark:bg-primary-900 dark:text-primary-200'
                : 'text-secondary-700 hover:bg-secondary-100 dark:text-secondary-300 dark:hover:bg-secondary-800'
            }`}
            aria-current={currentPath === item.href ? 'page' : undefined}
          >
            {item.label}
          </a>
        ))}
      </div>

      <!-- Actions -->
      <div class="flex items-center space-x-3">
        <!-- Mode Professeur -->
        <button
          id="teacher-mode-btn"
          class="btn-outline text-sm"
          aria-label="Activer le mode professeur"
        >
          Mode Prof
        </button>

        <!-- Mode sombre -->
        <button
          id="theme-toggle"
          class="p-2 rounded-lg hover:bg-secondary-100 dark:hover:bg-secondary-800 transition-colors"
          aria-label="Basculer le thème"
        >
          <svg class="w-5 h-5 hidden dark:block" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
          </svg>
          <svg class="w-5 h-5 block dark:hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
          </svg>
        </button>

        <!-- Menu mobile -->
        <button
          id="mobile-menu-btn"
          class="md:hidden p-2 rounded-lg hover:bg-secondary-100 dark:hover:bg-secondary-800"
          aria-label="Ouvrir le menu"
          aria-expanded="false"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Menu mobile -->
    <div id="mobile-menu" class="hidden md:hidden mt-4 pb-4 border-t border-secondary-200 dark:border-secondary-700">
      <div class="flex flex-col space-y-2 mt-4">
        {navItems.map((item) => (
          <a
            href={item.href}
            class={`px-4 py-2 rounded-lg transition-colors ${
              currentPath === item.href
                ? 'bg-primary-100 text-primary-700 dark:bg-primary-900 dark:text-primary-200'
                : 'text-secondary-700 hover:bg-secondary-100 dark:text-secondary-300 dark:hover:bg-secondary-800'
            }`}
          >
            {item.label}
          </a>
        ))}
      </div>
    </div>
  </nav>
</header>

<script>
  // Menu mobile
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuBtn?.addEventListener('click', () => {
    const isExpanded = mobileMenuBtn.getAttribute('aria-expanded') === 'true';
    mobileMenuBtn.setAttribute('aria-expanded', String(!isExpanded));
    mobileMenu?.classList.toggle('hidden');
  });

  // Mode sombre
  const themeToggle = document.getElementById('theme-toggle');
  const html = document.documentElement;

  // Charger le thème sauvegardé
  const savedTheme = localStorage.getItem('theme') || 'light';
  if (savedTheme === 'dark') {
    html.classList.add('dark');
  }

  themeToggle?.addEventListener('click', () => {
    html.classList.toggle('dark');
    const isDark = html.classList.contains('dark');
    localStorage.setItem('theme', isDark ? 'dark' : 'light');
  });

  // Mode Professeur
  const teacherModeBtn = document.getElementById('teacher-mode-btn');
  
  teacherModeBtn?.addEventListener('click', () => {
    window.location.href = '/prof';
  });

  // Vérifier si le mode professeur est actif
  const isTeacher = localStorage.getItem('isTeacher') === 'true';
  if (isTeacher && teacherModeBtn) {
    teacherModeBtn.textContent = 'Mode Prof Actif';
    teacherModeBtn.classList.add('bg-green-100', 'text-green-700', 'border-green-600');
  }
</script>
