---
import Layout from './Layout.astro';
import Breadcrumb from '../components/Breadcrumb.astro';

interface Props {
  frontmatter: {
    title: string;
    level: string[];
    type: string;
    slug: string;
    objectifs?: string[];
    prerequis?: string[];
    duree_estimee?: string;
    auteur?: string;
    updated?: string;
    mots_cles?: string[];
  };
}

const { frontmatter } = Astro.props;
const { title, level, type, objectifs, prerequis, duree_estimee, auteur, updated, mots_cles } = frontmatter;

const breadcrumbItems = [
  { label: type === 'cours' ? 'Cours' : 'Exercices', href: `/${type}` },
  { label: title },
];
---

<Layout title={title} description={objectifs?.[0] || `${title} - Python Pédagogique`}>
  <article class="container mx-auto px-4 py-8">
    <Breadcrumb items={breadcrumbItems} />
    
    <!-- En-tête du cours -->
    <header class="mb-8">
      <div class="flex flex-wrap items-center gap-2 mb-4">
        {level.map((l) => (
          <span class="badge badge-primary">{l}</span>
        ))}
        {duree_estimee && (
          <span class="badge badge-secondary flex items-center">
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            {duree_estimee}
          </span>
        )}
      </div>
      
      <h1 class="text-4xl font-bold text-secondary-900 dark:text-secondary-50 mb-4">
        {title}
      </h1>
      
      {updated && (
        <p class="text-sm text-secondary-600 dark:text-secondary-400">
          Mis à jour le {new Date(updated).toLocaleDateString('fr-FR', { 
            year: 'numeric', 
            month: 'long', 
            day: 'numeric' 
          })}
          {auteur && ` par ${auteur}`}
        </p>
      )}
    </header>
    
    <!-- Métadonnées du cours -->
    {(objectifs || prerequis) && (
      <div class="grid md:grid-cols-2 gap-6 mb-8">
        {objectifs && objectifs.length > 0 && (
          <div class="card p-6">
            <h2 class="text-lg font-semibold text-secondary-900 dark:text-secondary-50 mb-3 flex items-center">
              <svg class="w-5 h-5 mr-2 text-primary-600" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z" />
                <path fill-rule="evenodd" d="M4 5a2 2 0 012-2 3 3 0 003 3h2a3 3 0 003-3 2 2 0 012 2v11a2 2 0 01-2 2H6a2 2 0 01-2-2V5zm3 4a1 1 0 000 2h.01a1 1 0 100-2H7zm3 0a1 1 0 000 2h3a1 1 0 100-2h-3zm-3 4a1 1 0 100 2h.01a1 1 0 100-2H7zm3 0a1 1 0 100 2h3a1 1 0 100-2h-3z" clip-rule="evenodd" />
              </svg>
              Objectifs
            </h2>
            <ul class="space-y-2">
              {objectifs.map((obj) => (
                <li class="flex items-start text-secondary-700 dark:text-secondary-300">
                  <svg class="w-5 h-5 mr-2 mt-0.5 text-green-600 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                  {obj}
                </li>
              ))}
            </ul>
          </div>
        )}
        
        {prerequis && prerequis.length > 0 && (
          <div class="card p-6">
            <h2 class="text-lg font-semibold text-secondary-900 dark:text-secondary-50 mb-3 flex items-center">
              <svg class="w-5 h-5 mr-2 text-primary-600" fill="currentColor" viewBox="0 0 20 20">
                <path d="M10.394 2.08a1 1 0 00-.788 0l-7 3a1 1 0 000 1.84L5.25 8.051a.999.999 0 01.356-.257l4-1.714a1 1 0 11.788 1.838L7.667 9.088l1.94.831a1 1 0 00.787 0l7-3a1 1 0 000-1.838l-7-3zM3.31 9.397L5 10.12v4.102a8.969 8.969 0 00-1.05-.174 1 1 0 01-.89-.89 11.115 11.115 0 01.25-3.762zM9.3 16.573A9.026 9.026 0 007 14.935v-3.957l1.818.78a3 3 0 002.364 0l5.508-2.361a11.026 11.026 0 01.25 3.762 1 1 0 01-.89.89 8.968 8.968 0 00-5.35 2.524 1 1 0 01-1.4 0zM6 18a1 1 0 001-1v-2.065a8.935 8.935 0 00-2-.712V17a1 1 0 001 1z" />
              </svg>
              Prérequis
            </h2>
            <ul class="space-y-2">
              {prerequis.map((prereq) => (
                <li class="flex items-start text-secondary-700 dark:text-secondary-300">
                  <svg class="w-5 h-5 mr-2 mt-0.5 text-blue-600 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                  </svg>
                  {prereq}
                </li>
              ))}
            </ul>
          </div>
        )}
      </div>
    )}
    
    <!-- Actions -->
    <div class="flex flex-wrap gap-3 mb-8 no-print">
      <button
        id="export-responses-btn"
        class="btn-primary flex items-center"
      >
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
        </svg>
        Exporter mes réponses
      </button>
      
      <button
        id="reset-responses-btn"
        class="btn-secondary flex items-center"
      >
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
        </svg>
        Réinitialiser
      </button>
      
      <button
        onclick="window.print()"
        class="btn-outline flex items-center"
      >
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z" />
        </svg>
        Imprimer
      </button>
    </div>
    
    <!-- Contenu du cours -->
    <div class="prose prose-lg dark:prose-invert max-w-none">
      <slot />
    </div>
    
    <!-- Mots-clés -->
    {mots_cles && mots_cles.length > 0 && (
      <div class="mt-12 pt-8 border-t border-secondary-200 dark:border-secondary-700">
        <h3 class="text-sm font-medium text-secondary-700 dark:text-secondary-300 mb-3">
          Mots-clés :
        </h3>
        <div class="flex flex-wrap gap-2">
          {mots_cles.map((tag) => (
            <span class="badge badge-secondary">
              {tag}
            </span>
          ))}
        </div>
      </div>
    )}
  </article>
</Layout>

<script>
  // Export des réponses
  const exportBtn = document.getElementById('export-responses-btn');
  const resetBtn = document.getElementById('reset-responses-btn');
  const pageId = window.location.pathname;

  exportBtn?.addEventListener('click', () => {
    const responses: Record<string, string> = {};
    
    // Collecter toutes les réponses
    Object.keys(localStorage).forEach((key) => {
      if (key.startsWith(`response_${pageId}_`)) {
        const blockId = key.replace(`response_${pageId}_`, '');
        responses[blockId] = localStorage.getItem(key) || '';
      }
    });

    if (Object.keys(responses).length === 0) {
      alert('Aucune réponse à exporter.');
      return;
    }

    // Créer le contenu du fichier
    const content = JSON.stringify({
      page: pageId,
      titre: document.title,
      date: new Date().toISOString(),
      reponses: responses,
    }, null, 2);

    // Télécharger le fichier
    const blob = new Blob([content], { type: 'application/json' });
    const url = URL.createObjectURL(blob);
    const a = document.createElement('a');
    a.href = url;
    a.download = `reponses_${pageId.replace(/\//g, '_')}_${Date.now()}.json`;
    a.click();
    URL.revokeObjectURL(url);
  });

  resetBtn?.addEventListener('click', () => {
    if (confirm('Voulez-vous vraiment effacer toutes vos réponses pour cette page ?')) {
      Object.keys(localStorage).forEach((key) => {
        if (key.startsWith(`response_${pageId}_`)) {
          localStorage.removeItem(key);
        }
      });
      
      // Recharger la page
      window.location.reload();
    }
  });
</script>
